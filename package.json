{
  "name": "forum-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "dependencies": {
    "@reduxjs/toolkit": "^2.8.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "prop-types": "^15.8.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.6.3",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "e2e": "cypress open",
    "e2e:ci": "start-server-and-test start http://localhost:3000 \"cypress run\"",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:jsx-a11y/recommended"
    ],
    "plugins": [
      "react",
      "react-hooks",
      "jsx-a11y",
      "jest"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off",
      "react/prop-types": "warn",
      "react/jsx-props-no-spreading": "off",
      "react/forbid-prop-types": "off",
      "no-alert": "off",
      "max-len": [
        "error",
        {
          "code": 120,
          "ignoreComments": true
        }
      ],
      "no-unused-vars": "warn",
      "linebreak-style": [
        "error",
        "lf"
      ]
    },
    "env": {
      "jest/globals": true
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@faker-js/faker": "^8.x.x",
    "@storybook/addon-docs": "^9.0.17",
    "@storybook/addon-onboarding": "^9.0.17",
    "@storybook/preset-create-react-app": "^9.0.17",
    "@storybook/react-webpack5": "^9.0.17",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "cypress": "^13.17.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^27.x.x",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-storybook": "^9.0.17",
    "start-server-and-test": "^2.0.12",
    "storybook": "^9.0.17",
    "style-loader": "^4.0.0",
    "webpack": "^5.100.2"
  }
}
